# trapezoidal:  bottom=1.143000e-04 top=9.906000e-05 thickness=1.524000e-05
# location:  x=9.906000e-04 y=1.447800e-04
set cond_005 [.fsStr create poly [XP 361] [YP 140] [XP 391] [YP 140] [XP 389] [YP 136] [XP 363] [YP 136] -fill #81f -outline black ]
.fsStr bind $cond_005 <B1-Motion>  {showXY %x %y}
.fsStr bind $cond_005 <Enter> { showMProp 5.760000e+07 1.800000e-06 1.524000e-05 }
