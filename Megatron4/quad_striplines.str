# trapezoidal:  bottom=1.143000e-04 top=9.906000e-05 thickness=1.524000e-05
# location:  x=1.714500e-03 y=1.447800e-04
set cond_006 [.fsStr create poly [XP 551] [YP 140] [XP 581] [YP 140] [XP 579] [YP 136] [XP 553] [YP 136] -fill #81f -outline black ]
.fsStr bind $cond_006 <B1-Motion>  {showXY %x %y}
.fsStr bind $cond_006 <Enter> { showMProp 5.760000e+07 1.800000e-06 1.524000e-05 }
